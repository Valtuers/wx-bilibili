page{
    color: #666;
    padding: 10rpx;
}
/*首页导航*/
.nav_wrap{}
.nav_wrap .nav{
    white-space: nowrap;
    padding: 5rpx 0;
}
.nav_wrap .nav .nav_item{
    display: inline-block;
    font-size: 30rpx;
    padding: 20rpx 45rpx;
}
.nav_wrap .nav .nav_item.active{
    border-bottom: 5rpx solid #de688b;
}
/*轮播图*/
.slides{
    margin-top: 10rpx;
}
.slides swiper{
    height: 220rpx;
}
.slides navigator{
    width: 100%;
    height: 100%;
}
.slides image{
    width: 100%;
    height: 100%;
}
/*视频列表*/
.video_wrap{
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    padding: 5px;
}
.video_wrap .video_item{
    width: 48%;
    margin-bottom: 20rpx;
}
.video_item .video_img{
    position: relative;
}
.video_item .video_img image{
    width: 100%;
    border-radius: 15rpx;
}
.video_item .video_img .video_info{
    position: absolute;
    bottom: 10rpx;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-around;
    color: #fff;
    font-size: 24rpx;
}
.video_item .video_title{
    font-size: 28rpx;

    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}